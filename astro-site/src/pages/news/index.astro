---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("news");
---

<Layout title="Energy News & Announcements">
  <section class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-blue-300 mb-6">Energy News & Announcements</h1>
    <p class="text-gray-400 mb-8">
      Stay up-to-date with the latest Ofgem updates, UK government announcements, and market developments.
    </p>

    {posts.length === 0 ? (
      <p class="text-gray-500 italic">No news published yet. Please check again later.</p>
    ) : (
      <ul class="space-y-4">
        {posts.map((item) => (
          <li class="border-b border-[#1E3A5F]/40 pb-4">
            <a href={`/news/${item.slug}/`} class="text-blue-400 hover:text-blue-300 text-lg font-medium">
              {item.data.title}
            </a>
            <p class="text-sm text-gray-400 italic">{item.data.date}</p>
            <p class="text-gray-300 text-sm mt-1">{item.data.description}</p>
          </li>
        ))}
      </ul>
    )}
  </section>
</Layout>
