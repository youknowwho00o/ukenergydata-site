---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("energy-saving");
---

<Layout title="Energy Saving Tips & Guides">
  <section class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-blue-300 mb-6">Energy Saving Tips & Guides</h1>
    <p class="text-gray-400 mb-8">
      Learn how to reduce your homeâ€™s energy usage and carbon footprint with practical guides, tips, and case studies.
    </p>

    {posts.length === 0 ? (
      <p class="text-gray-500 italic">No articles available yet. Check back soon!</p>
    ) : (
      <ul class="space-y-4">
        {posts.map((item) => (
          <li class="border-b border-[#1E3A5F]/40 pb-4">
            <a href={`/energy-saving/${item.slug}/`} class="text-blue-400 hover:text-blue-300 text-lg font-medium">
              {item.data.title}
            </a>
            <p class="text-sm text-gray-400 italic">{item.data.date}</p>
            <p class="text-gray-300 text-sm mt-1">{item.data.description}</p>
          </li>
        ))}
      </ul>
    )}
  </section>
</Layout>
