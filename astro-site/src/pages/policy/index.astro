---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const policies = await getCollection("policy");
---

<Layout title="UK Energy Policy Library">
  <section class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-blue-300 mb-6">UK Energy Policy Library</h1>
    <p class="text-gray-400 mb-8">Explore the latest UK government energy policies, incentives, and subsidy programs.</p>

    <ul class="space-y-4">
      {policies.map((item) => (
        <li class="border-b border-[#1E3A5F]/40 pb-4">
          <a href={`/policy/${item.slug}/`} class="text-blue-400 hover:text-blue-300 text-lg font-medium">
            {item.data.title}
          </a>
          <p class="text-sm text-gray-400 italic">{item.data.date}</p>
          <p class="text-gray-300 text-sm mt-1">{item.data.description}</p>
        </li>
      ))}
    </ul>
  </section>
</Layout>
