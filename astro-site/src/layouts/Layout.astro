          <h1 class="text-4xl md:text-5xl font-extrabold text-blue-300 tracking-tight mb-4 leading-tight">
            {title}
          </h1>

          {date && (
            <p class="text-gray-400 italic mb-3">
              {new Date(date).toLocaleDateString("en-GB", {
                day: "2-digit",
                month: "long",
                year: "numeric"
